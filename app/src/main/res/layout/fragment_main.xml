<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.MainFragment">

    <Button
        android:id="@+id/btn_to_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LifeCycle"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_to_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigation"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_to_lifecycle" />

    <Button
        android:id="@+id/btn_to_viewmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewModel"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_to_navigation" />

    <Button
        android:id="@+id/btn_to_livedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiveData"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_to_viewmodel" />

</androidx.constraintlayout.widget.ConstraintLayout>